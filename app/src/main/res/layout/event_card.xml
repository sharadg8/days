<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ec_label"
            android:layout_width="56dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="@color/palette0"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ec_title"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentTop="true"
                    android:textSize="18sp"
                    android:text="Event Title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ec_date"
                    android:text="March 31, 2014"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ec_days"
                android:paddingRight="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/secondary_text"
                android:textSize="32sp"
                android:text="36"/>
            <ImageView
                android:id="@+id/ec_ago_togo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_black_24dp"
                android:tint="@color/secondary_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                android:alpha="25"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>