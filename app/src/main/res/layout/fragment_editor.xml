<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/close_me"
    tools:context="com.sharad.days.EditorFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:elevation="6dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:id="@+id/view_add_new" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_title"
            android:capitalize="words"
            android:hint="Enter Title"
            android:maxLength="25"
            android:singleLine="true"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@android:color/transparent"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_date"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="09:00 am"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginTop="8dp"
            android:alpha="75"
            android:background="@android:color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_palette"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                android:src="@drawable/ic_palette_black_24dp"
                android:tint="@android:color/white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_favorite"
                android:layout_toRightOf="@+id/btn_palette"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_black_24dp"
                android:tint="@android:color/white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_notification"
                android:layout_toRightOf="@+id/btn_favorite"
                android:padding="8dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="@android:color/white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@drawable/ic_check_black_24dp"
                android:tint="@android:color/white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel"
                android:layout_toLeftOf="@+id/btn_save"
                android:padding="8dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:tint="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/colorPicker"
        android:background="@color/primary_light"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:elevation="6dp"
        android:clickable="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/labelPicker"
        android:background="@color/primary_light"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:elevation="6dp"
        android:clickable="true"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/maskTransition"
        android:background="@color/primary_light"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:elevation="6dp"
        android:clickable="true"
        android:visibility="gone"/>
</RelativeLayout>
